<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/personal_yuanjiaojuxingsuo">

        <TextView
            android:id="@+id/pay_dialog_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/personal_yuanjiaojuxingsuo"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/dengdaizhifujieguo"/>

        <Button
            android:id="@+id/pay_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/queren"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/personal_yuanjiaojuxingblue"/>
    </LinearLayout>

</RelativeLayout>