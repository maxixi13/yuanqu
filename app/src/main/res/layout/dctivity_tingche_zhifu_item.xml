<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_yuanjiaojuxingsuo">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/dddddd" />


            <TextView
                android:id="@+id/zhifu_dialog_weixin_text"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/weixinzhifu"
                android:textColor="@color/top_blue"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/dddddd" />

            <TextView
                android:id="@+id/zhifu_dialog_zhifubao_text"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="@string/zhifubaozhifu"
                android:textColor="@color/top_blue"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/dddddd" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>