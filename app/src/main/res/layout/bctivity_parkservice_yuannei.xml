<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijingf5f5f5"
    tools:context=".perkservice.Parkservice_yuannei">

    <Toolbar
        android:id="@+id/toolbar_park_yuanei"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="?attr/colorPrimary"
        android:navigationIcon="@drawable/back_button"
        android:title=""
        android:titleTextColor="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_park"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:background="@color/beijingf5f5f5"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/yuannei_wuyezixun"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/button_park_zixun" />

            <ImageButton
                android:id="@+id/yuannei_tousujianyi"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/button_park_jianyi" />

            <ImageButton
                android:id="@+id/yuannei_wuyebaoxiu"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/button_park_baoxiu" />

            <ImageButton
                android:id="@+id/yuanei_yuanqujieshao"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/button_park_jieshao" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>