<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Loginpage"
    android:background="@color/beijingf5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/top_blue">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:background="@color/top_blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_denglutext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/denglu"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@drawable/logintextselect"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/qianlan"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/login_zhucetext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhuce"
                android:textSize="25sp"
                android:textColor="@drawable/logintextselect"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:id="@+id/login_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"/>

</RelativeLayout>