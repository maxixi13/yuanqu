<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>//Toolbar颜色
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>//状态栏颜色
        <item name="colorAccent">@color/colorAccent</item>
        
        <!--去除标题-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--toolbar三点主题设置-->
    <style name="ToolbarColorBackArrow" parent="AppTheme">
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>
    <style name="OverflowButtonStyle" parent="ToolbarColorBackArrow">
        <item name="android:src">@drawable/personal_chilun</item>
    </style>

</resources>
